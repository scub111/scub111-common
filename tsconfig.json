{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "lib",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "sourceMap": false,
    "lib": [
      "es6",
      "es7",
      "dom"
    ],
  },
  "exclude": [
    "node_modules",
    "dist",
    "**/*.spec.ts"
  ]
}